{
  "name": "blazing-blogs",
  "version": "1.0.0",
  "description": "A blank template to get started with Payload 3.0",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "cross-env NODE_OPTIONS=\"--no-deprecation --max-old-space-size=8000\" next build",
    "dev": "cross-env NODE_OPTIONS=--no-deprecation next dev",
    "devsafe": "rm -rf .next && cross-env NODE_OPTIONS=--no-deprecation next dev",
    "generate:importmap": "cross-env NODE_OPTIONS=--no-deprecation payload generate:importmap",
    "generate:types": "cross-env NODE_OPTIONS=--no-deprecation payload generate:types",
    "lint": "cross-env NODE_OPTIONS=--no-deprecation next lint",
    "format": "prettier --write .",
    "lint-format": "pnpm run lint && pnpm run format",
    "payload": "cross-env NODE_OPTIONS=--no-deprecation payload",
    "start": "cross-env NODE_OPTIONS=--no-deprecation next start",
    "test": "pnpm run test:api",
    "test:api": "cross-env NODE_OPTIONS=--no-deprecation vitest run --config ./vitest.config.mts",
    "prepare": "husky",
    "validate": "pnpm run format && pnpm run lint && pnpm run test && pnpm run build"
  },
  "dependencies": {
    "@gsap/react": "^2.1.2",
    "@payloadcms/db-mongodb": "3.55.1",
    "@payloadcms/live-preview-react": "^3.55.1",
    "@payloadcms/next": "3.55.1",
    "@payloadcms/payload-cloud": "3.55.1",
    "@payloadcms/plugin-seo": "3.55.1",
    "@payloadcms/richtext-lexical": "3.55.1",
    "@payloadcms/storage-uploadthing": "^3.55.1",
    "@payloadcms/ui": "3.55.1",
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-navigation-menu": "^1.2.14",
    "@radix-ui/react-slot": "^1.2.3",
    "@repo/eslint-config": "workspace:*",
    "@tailwindcss/postcss": "^4.1.13",
    "@tailwindcss/typography": "^0.5.16",
    "canvas-confetti": "^1.9.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cross-env": "^7.0.3",
    "dotenv": "16.4.7",
    "graphql": "^16.8.1",
    "gsap": "^3.13.0",
    "lucide-react": "^0.544.0",
    "next": "15.4.4",
    "next-auth": "5.0.0-beta.29",
    "payload": "3.55.1",
    "postcss": "^8.5.6",
    "prismjs": "^1.30.0",
    "react": "^19.1.1",
    "react-dom": "19.1.1",
    "sharp": "0.34.2",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.13"
  },
  "devDependencies": {
    "@playwright/test": "1.54.1",
    "@testing-library/react": "16.3.0",
    "@types/canvas-confetti": "^1.9.0",
    "@types/node": "^22.5.4",
    "@types/prismjs": "^1.26.5",
    "@types/react": "19.1.8",
    "@types/react-dom": "19.1.6",
    "@vitejs/plugin-react": "4.5.2",
    "husky": "^9.1.7",
    "jsdom": "26.1.0",
    "playwright": "1.54.1",
    "playwright-core": "1.54.1",
    "prettier": "^3.4.2",
    "tw-animate-css": "^1.3.8",
    "typescript": "5.7.3",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "3.2.3"
  },
  "engines": {
    "node": "^18.20.2 || >=20.9.0",
    "pnpm": "^9 || ^10"
  }
}
