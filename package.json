{
  "name": "blazing-blog",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "build:frontend": "turbo run build --filter=blazing-blogs",
    "build:backend": "turbo run build --filter=server",
    "dev": "turbo run dev",
    "start": "turbo run start",
    "dev:frontend": "turbo run dev --filter=blazing-blogs",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "test": "turbo run test",
    "validate": "pnpm run format && pnpm run lint && pnpm run test && pnpm run build"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.5.6",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "sharp",
      "esbuild",
      "unrs-resolver"
    ]
  }
}
